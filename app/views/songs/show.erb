<% if flash.has?(:message) %>
  <%= flash[:message] %>
<% end %>

<h1> <%= @song.name %> </h1>

<ul>
  <li><%= @song.artist.name %></li>
  <%@song.genres.each do |genre| %>
  <li>
    <a href="/genres/<%=genre.slug%>" ><%= genre.name %></a> </li>
  <% end %>
  <li>
    <a href="/artists/<%=@song.artist.slug %>"><%= @song.artist.name %></a>
  </li>


</ul>